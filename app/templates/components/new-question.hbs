{{#if addNewQuestion}}
  <h3>New Question</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Your Question:</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">User Name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes:</label>
        {{input value=notes id="notes"}}
      </div>

      <button class="btn btn-info" {{action 'saveQuestion'}}>Ask</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info" {{action 'questionFormShow'}}>Ask a question</button>
{{/if}}
