{{#if addNewAnswer}}
<h1>My Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">User Name:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer:</label>
        {{input value=content id="content"}}
      </div>

      <button {{action 'saveAnswer'}}>Submit</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>I know this</button>
{{/if}}
